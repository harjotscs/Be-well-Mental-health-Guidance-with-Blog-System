<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
      body{
        margin-top: 10px;
        text-align: center;
        background-image: linear-gradient(to bottom right, rgb(25, 188, 253), rgb(243, 124, 233));
      }
      *{
        margin: 0;
      }
        #video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, 700px);
      grid-auto-rows: 700px;

    }
    
    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border: 3px solid crimson;
      border-radius: 12px;
      margin: 22px;

    }
    .exit{
      border: 2px solid crimson;
      background-color: transparent;
      float: left;
      margin: 2px;
      padding: 4px 12px;
      color: crimson;
      border-radius: 4px;
      font-size: medium
    }
    .exit:hover{
      background-color: crimson;
      color: white;
      cursor: pointer;
    }
    </style>
    
  <script defer src="https://cdn.jsdelivr.net/npm/peerjs@1.3.1/dist/peerjs.min.js"></script>
</head>

<body>
    <a href="/"><button class="exit">EXIT</button></a>
    <div id="video-grid"></div>
    <input type="hidden" id="roomId" value="{{roomId}}" name="">
</body>
<script>
        const room_id=document.getElementById('roomId').value
    </script>
    <script src="/socket.io/socket.io.js" defer></script>
  <script src="/js/room.js" defer></script>
</html>